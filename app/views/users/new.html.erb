<%= render 'layouts/errors', obj: @user %>
<div class="ui middle aligned center aligned grid">
  <div class="four wide column">
    <h2 class="ui teal image heade">
      <img src="" alt="" class="image">
      <div class="content">Sign up for an account</div>
    </h2>
    <%= form_with(model: @user, class: "ui large form", local: true) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "enter your username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "pick a password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Sign up", class: "ui fluid large teal submit button" %>
      </div>
    <% end %>
  </div>
</div>